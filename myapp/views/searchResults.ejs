<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>


<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"> Resultados de b√∫squeda </h2>
			</div>
			<!-- Show the "ultimos" products -->
		<% if (productos.length > 0) { %>
			<% for (let i = 0; i < productos.length; i++) { %> 
				<div id="seeyuh" class="col-12 col-sm-6 col-lg-3"> 
					<section class="product-box"> 
						<a href='/product/detalle/<%= productos[i].id %>'> 
							<figure class="product-box_image"> 
								<img src="<%= productos[i].imagen %>" alt=""> 
							</figure> 
							<article class="product-box_data"> 
								<h2><%= productos[i].nombre %></h2> 
								<p><%= productos[i].descripcion %></p> 
								<p> <strong> Vendedor: </strong> <a href="/users/profile/ <%= productos[i].usuario.id %> "> <%= productos[i].usuario.nombre %></p> </a>
								<p> <strong> Comentarios: </strong> <%= productos[i].comentarios.length %></p> 
							</article>
						</a> 
					</section> 
				</div> 
				<% } %>
			<% } else { %> 
				<h2> <%= mensaje %> </h2>
			<% } %>
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>