<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= producto.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/product/product-add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= producto.imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description"><%= producto.descripcion %></p>
				</article>
				
				<div class="col-12 col-lg-4">
					<section class="comments">			
						<% for (let i = 0; i < producto.comentarios.length; i++) { 
							let comentario = producto.comentarios[i]
							%>
							
							<article>
								<img src="<%= comentario.usuario.foto %>" alt="">
								<div class="data">
									<p class="user">
										<strong> <a href="profile"> <%= comentario.usuario.nombre %> </a> </strong>
										<%= comentario.comentario %></p>
								</div>
							</article>

						<% } %>

					</section>
					<form class="form" action="/product/detalle/<%= producto.id %>" method="POST">
						<input class="form-input" type="text" name="agregarComentario" value="" placeholder="Agregar comentario" required>
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>